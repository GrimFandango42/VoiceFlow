# VoiceFlow Security Configuration
# Copy this file to .env and set your values

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_USE_HTTPS=false

# Security Settings
WEBSOCKET_AUTH_TOKEN=your-secure-token-here
DATABASE_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Logging Configuration  
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Development Settings
DEV_MODE=false
ENABLE_CORS=false

# Audio Configuration
MAX_AUDIO_DURATION=30
MAX_AUDIO_FILE_SIZE=10485760

# AI Enhancement
ENABLE_AI_ENHANCEMENT=true
AI_MODEL=llama3.3:latest
AI_TEMPERATURE=0.3

# Text Injection Security
ENABLE_TEXT_INJECTION=true
REQUIRE_USER_CONFIRMATION=true
ENABLE_FAILSAFE=true